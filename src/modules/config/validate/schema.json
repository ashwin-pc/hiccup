{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/Config",
    "definitions": {
        "Config": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "version": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                },
                "featured": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Featured"
                    }
                },
                "categories": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Category"
                    }
                },
                "metadata": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "readonly": {
                            "type": "boolean"
                        },
                        "editing": {
                            "type": "boolean"
                        }
                    }
                }
            },
            "required": [
                "featured",
                "id",
                "title",
                "categories"
            ],
            "title": "Config"
        },
        "Category": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string"
                },
                "links": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Link"
                    }
                }
            },
            "required": [
                "links",
                "title"
            ],
            "title": "Category"
        },
        "Featured": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "link": {
                    "type": "string",
                    "pattern": "^https?://"
                },
                "tags": {
                    "type": "string"
                },
                "background": {
                    "type": "string"
                }
            },
            "required": [
                "link",
                "name"
            ],
            "title": "Featured"
        },
        "Link": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "link": {
                    "type": "string",
                    "pattern": "^https?://"
                },
                "tags": {
                    "type": "string"
                }
            },
            "required": [
                "link",
                "name"
            ],
            "title": "Link"
        }
    }
}